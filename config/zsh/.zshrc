# use Windows' git when working under C:\ drive
function git() {
  if $(pwd -P | grep -q "^\/mnt\/d\/*"); then
    git.exe "$@"
  else
    command git "$@"
  fi
}

export NVM_DIR="$HOME/.nvm"
