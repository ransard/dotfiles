# User configuration
export MICROSOFT_UNAME=$(uname -a | grep -i microsoft)
export IS_WSL=$( [ ! -z "$MICROSOFT_UNAME" ] && echo "1" || echo "0" )

if [[ "$IS_WSL" == "1" ]]; then
  __git_prompt_git() {
    if wslpath -w . | grep -q '\\wsl'; then
      git --no-optional-locks $@
    else
      git.exe --no-optional-locks $@
    fi
  }
fi

